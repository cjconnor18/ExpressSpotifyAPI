<p>Login Successful</p>
<p>Please Select a Playlist</p>

  <% if(playlists.length > 0) { %> 
    <% playlists.forEach( playlist => { %>
      <a href="/login/player/<%= playlist.id %>" > 
        <%= playlist.name %> <br>
        <%= playlist.description %>
      </a>
    <% }) %>
  <% } else { %>
      <p>No playlists available</p>
  <% } %>



